{
  "name": "ngi-firn",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "description": "A laboratory freezer inventory management system created with Nuxt3, Vue and UnaUI.",
  "author": "Matthias Zepper <MatthiasZepper@users.noreply.github.com>",
  "license": "MIT",
  "homepage": "https://ngisweden.scilifelab.se",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NationalGenomicsInfrastructure/ngi-firn.git"
  },
  "bugs": "https://github.com/NationalGenomicsInfrastructure/ngi-firn/issues",
  "keywords": [
    "ngi",
    "scilifelab",
    "laboratory-management",
    "inventory-system",
    "freezer-management",
    "sample-tracking",
    "scientific-application",
    "laboratory-information-system",
    "genomics",
    "bioinformatics",
    "nuxt",
    "vue",
    "database",
    "web-application"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nuxi dev",
    "dev-https": "export NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" && nuxi dev",
    "dev-build-node": "node --env-file=.env .output/server/index.mjs",
    "dev-build-bun": "bun --env-file=.env .output/server/index.mjs",
    "build": "NITRO_ANALYZE=1 NITRO_DEBUG=1 nuxi build",
    "start": "node .output/server/index.mjs",
    "start-bun": "bun .output/server/index.mjs",
    "typecheck": "npx nuxi typecheck",
    "lint": "eslint .",
    "postinstall": "nuxt prepare",
    "db:init": "tsx scripts/init-db.ts",
    "db:test": "tsx scripts/test-db-connection.ts"
  },
  "dependencies": {
    "@ibm-cloud/cloudant": "^0.12.13",
    "@iconify-json/lucide": "^1.2.81",
    "@iconify-json/simple-icons": "^1.2.63",
    "@nuxthub/core": "^0.9.1",
    "@pinia/colada": "^0.17.9",
    "@pinia/colada-nuxt": "^0.2.4",
    "@pinia/nuxt": "^0.11.3",
    "@trpc/client": "^11.8.0",
    "@trpc/server": "^11.8.0",
    "@una-ui/nuxt": "^0.66.0",
    "@vee-validate/zod": "^4.15.1",
    "h3-zod": "^0.5.3",
    "jose": "^6.1.3",
    "jsbarcode": "^3.12.1",
    "luxon": "^3.7.2",
    "nuxt": "^4.2.2",
    "nuxt-auth-utils": "^0.5.26",
    "pdfmake": "^0.2.20",
    "pinia": "^3.0.4",
    "qrcode": "^1.5.4",
    "qrcode.vue": "^3.6.0",
    "trpc-nuxt": "^1.2.0",
    "zod": "^4.2.0",
    "zxing-wasm": "^2.2.4"
  },
  "devDependencies": {
    "@iconify-json/radix-icons": "^1.2.5",
    "@iconify-json/tabler": "^1.2.23",
    "@nuxt/devtools": "^2.7.0",
    "@nuxt/eslint": "^1.12.1",
    "@types/luxon": "^3.7.1",
    "@types/pdfmake": "^0.2.12",
    "@types/qrcode": "^1.5.6",
    "@unocss/nuxt": "66.3.3",
    "@unocss/preset-wind4": "66.3.3",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.2",
    "form-data": "2.5.5",
    "rollup-plugin-visualizer": "^6.0.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unocss": "66.3.3",
    "vue-tsc": "^3.1.8",
    "wrangler": "^4.54.0"
  },
  "packageManager": "pnpm@10.22.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "core-js",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "vue-demi",
      "workerd"
    ]
  }
}
